{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "declaration": true,
    "outDir": "dist",
    "lib": [
      "esnext"
    ],
    "types": [
      "node",
      "koa",
      "koa-router"
    ],
    "paths": {
      "@r/*": ["./*"],
      "@/*": ["src/*"]
    }
  },
  "include": [
    "./src"
  ]
}